package view;

import static utils.CollectionUtils.generate;

import java.util.Collection;

import persistence.entities.Item;
import service.ItemService;
import service.ItemServiceImpl;

public class Ex03ItemView {
	private static ItemService itemService;

	static {
		itemService = new ItemServiceImpl();
	}

	public static void main(String[] args) {
		generate("2AB. Liệt kê các mặt hàng không chứa thông tin loại hàng, nhà cung cấp", itemService.getAll());

//		generate(
//			"1H. Liệt kê các mặt hàng được bán trong ngày 07.09.2023", 
//			itemService.getItemsWithSalesDate(LocalDate.of(2023, 9, 7))
//		);
	}
	
	public static void generate(String prefix, Collection<Item> elements) {
		System.out.println(prefix + " --> {");
		
		elements.forEach(e -> {
			System.out.println("   " + e);
			System.out.println("   group --> " + e.getGroup() + "\n");
			System.out.println("   details --> " + e.getDetails().size() + "\n");			
		});
		
		System.out.println("}\n");
	}

}
