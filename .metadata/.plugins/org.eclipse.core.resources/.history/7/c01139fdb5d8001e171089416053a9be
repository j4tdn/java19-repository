	@Override
	public List<ItemGroup> getAll() {
		return openSession().createNamedQuery(ItemGroup.Q_GET_ALL, ItemGroup.class)
				.getResultList();
	}
	
	@Override
	public ItemGroup get(int id) {
		return openSession().get(ItemGroup.class, id);
	}
	
